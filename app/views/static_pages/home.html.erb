<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  


<div class="span8">
      <h3>Поток сообщений</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center hero-unit">
  <h1>Добро пожаловать в Twitter</h1>

  <h2>
     Это клон
    <a href="http://twitter.com/">Twitter.com</a>
    для личного пользования.
  </h2>

  <%= link_to "Регистрация!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% end %>
